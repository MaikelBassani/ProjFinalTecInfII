@model Vidly.ViewsModels.CustomerFormViewModel
@{
    ViewBag.Title = Model.Title;
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    @Html.HiddenFor(m => m.Customer.id)
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.nome)
        @Html.TextBoxFor(m => m.Customer.nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.cpf)
        @Html.TextBoxFor(m => m.Customer.cpf, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.endereco)
        @Html.TextBoxFor(m => m.Customer.endereco, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.bairro)
        @Html.TextBoxFor(m => m.Customer.bairro, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.num_casa)
        @Html.TextBoxFor(m => m.Customer.num_casa, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
}
