@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center><h2>Clientes</h2></center>

@if (@Model.Any())
{
    <table class=" table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Enderceço</th>
                <th>Editar</th>
                <th>Remover</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td width="5px"><a href="/Customer/Details/@customer.id">@customer.id</a></td>
                    <td width="5px">@Html.ActionLink(@customer.nome, "Details", new { customer.id })</td>
                    <td width="5px">@customer.endereco</td>
                    <td width="5px"><a href="/Customer/edit/@customer.id"><input type="button" value="Editar"></a></td>
                    <td width="5px"><a href="/Customer/delete/@customer.id"><input type="button" value="Remover"></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não possui nenhum cliente cadastrado.</p>
}
@Html.ActionLink("Novo cliente", "New", null, new { @class = "btn btn-primary" })