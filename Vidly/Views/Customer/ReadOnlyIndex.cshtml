@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "ReadOnlyIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>Produtos</h2></center>

@if (@Model.Any())
{
    <table class=" table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Endereco</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td width="5px">@customer.id</td>
                    <td width="5px">@customer.nome</td>
                    <td width="5px">@customer.endereco</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não possui nenhuma espécie cadastrada.</p>
}