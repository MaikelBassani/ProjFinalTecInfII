@model IEnumerable<Vidly.Models.Product>
@{
    ViewBag.Title = "ReadOnlyIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<center><h2>Produtos</h2></center>

@if (@Model.Any())
{
    <table class=" table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.id</td>
                    <td>@produto.nome</td>
                    <td>@produto.preco</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não possui nenhum produto cadastrado.</p>
}
